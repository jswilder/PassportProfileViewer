<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_profile_gender_ic"
        style="@style/ListItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/person_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_profile_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_profile_name"
        style="@style/ListItemStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_profile_gender_ic"
        app:layout_constraintEnd_toStartOf="@+id/text_profile_age"
        app:layout_constraintStart_toEndOf="@+id/image_profile_gender_ic"
        app:layout_constraintTop_toTopOf="@+id/image_profile_gender_ic"
        tools:text="Jeremy Wilder" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_profile_age"
        style="@style/ListItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_profile_gender_ic"
        app:layout_constraintEnd_toStartOf="@+id/text_profile_id"
        app:layout_constraintStart_toEndOf="@+id/text_profile_name"
        app:layout_constraintTop_toTopOf="@+id/image_profile_gender_ic"
        tools:text="999" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_profile_id"
        style="@style/ListItemStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:ellipsize="start"
        app:layout_constraintBottom_toBottomOf="@+id/image_profile_gender_ic"
        app:layout_constraintEnd_toStartOf="@+id/appCompatImageView2"
        app:layout_constraintStart_toEndOf="@+id/text_profile_age"
        app:layout_constraintTop_toTopOf="@+id/image_profile_gender_ic"
        tools:text="1550700209981" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_profile_gender_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_profile_id"
        app:layout_constraintTop_toTopOf="@+id/image_profile_gender_ic" />

</androidx.constraintlayout.widget.ConstraintLayout>
