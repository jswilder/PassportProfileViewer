<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextProfileHeaderStyle" parent="TextAppearance.MaterialComponents.Headline4" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/roboto_mono</item>
    </style>

    <style name="TextProfileSubheaderStyle" parent="TextAppearance.MaterialComponents.Headline6" >
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:textStyle">b</item>-->
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/roboto_mono</item>
    </style>

    <style name="TextProfileSubheaderThinStyle" parent="TextAppearance.MaterialComponents.Headline6" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/roboto_mono_thin</item>
    </style>

    <style name="ButtonProfileStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:tint">@color/colorPrimaryDark</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="ListFilterStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="NewProfileLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="TextInputEditTextStyle" parent="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox" />

</resources>
