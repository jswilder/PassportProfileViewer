<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextProfileHeader" parent="TextAppearance.MaterialComponents.Headline4" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_mono</item>
    </style>


    <style name="TextProfileMinor" parent="TextAppearance.MaterialComponents.Headline6" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="fontFamily">@font/roboto_mono_thin</item>
    </style>

    <style name="ButtonProfile" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
